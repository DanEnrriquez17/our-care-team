<!DOCTYPE html>
<html>
<head>
  <title>Edit Task</title>
</head>
<body>
  <header>
    <h1>Edit Task</h1>
  </header>

  <section>
    <%= form_with(model: @task, local: true) do |form| %>
      <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>

      <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

      <div>
        <%= form.label :status %>
        <%= form.text_field :status %>
      </div>

      <div>
        <%= form.label :due_date %>
        <%= form.date_field :due_date %>
      </div>

      <div>
        <%= form.label :task_type %>
        <%= form.text_field :task_type %>
      </div>

      <div>
        <%= form.label :user_id, "Assignee" %>
        <%= form.collection_select :user_id, User.all, :id, :first_name %>
        <!-- Add more fields as needed -->
      </div>
      <!-- Add more fields as needed -->

      <div>
        <%= form.submit %>
      </div>
    <% end %>
  </section>

  <footer>
    <%= link_to 'Show', @task %> |
    <%= link_to 'Back', tasks_path %>
  </footer>
</body>
</html>
