<div id="show-form-container" class="modal-body">
  <h1>Task Details</h1>
  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>
  <p>
    <strong>Status:</strong>
    <%= task.status %>
  </p>
  <p>
    <strong>Due Date:</strong>
    <%= task.due_date %>
  </p>
  <p>
    <strong>Type:</strong>
    <%= task.task_type %>
  </p>
  <!-- Add more fields as needed -->
  <footer>
    <%= link_to 'Edit', edit_task_path(task) %>
    <%= link_to 'Back', tasks_path %>
  </footer>
</div>
